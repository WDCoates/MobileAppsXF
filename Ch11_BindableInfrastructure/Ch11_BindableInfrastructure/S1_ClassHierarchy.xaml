<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ch11_BindableInfrastructure.S1_ClassHierarchy">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="Android" Value="0, 5, 0, 0" />
            <On Platform="UWP, WPF" Value="0, 15, 0, 0" />
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Class Hierarchy!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <ScrollView>
                <StackLayout x:Name="SLayout2" Spacing="0"/>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>