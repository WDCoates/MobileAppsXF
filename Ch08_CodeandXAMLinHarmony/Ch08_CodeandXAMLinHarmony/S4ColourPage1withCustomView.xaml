<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ch08_CodeandXAMLinHarmony.S4ColourPage1withCustomView"
             xmlns:view1="clr-namespace:Ch08_CodeandXAMLinHarmony;assembly=Ch08_CodeandXAMLinHarmony">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="Android">10,10</On>
            <On Platform="UWP">10,10</On>
        </OnPlatform>
    </ContentPage.Padding>
    <ScrollView>
        <StackLayout>
            <Label Text="Using a Customer View"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <view1:S4ColourView1 ColourName="Aqua" />
            <view1:S4ColourView1 ColourName="Black" />
            <view1:S4ColourView1 ColourName="Blue" />
            <view1:S4ColourView1 ColourName="Green" />
            <view1:S4ColourView1 ColourName="Yellow" />
            <view1:S4ColourView1 ColourName="white" />
        </StackLayout>
    </ScrollView>
</ContentPage>